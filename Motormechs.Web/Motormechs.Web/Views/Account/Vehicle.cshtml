@model Motormechs.Web.Models.VehicleViewModel

@{
    ViewBag.Title = "Vehicle";
}

<section id="login" class="col-md-6 form-Section">
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-12">
            <section id="VehicleForm">
                @using (Html.BeginForm("Vehicle", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @*<h4>Use a local account to log in.</h4>*@
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.Id);
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-6 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Model, new { @class = "col-md-6 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Model)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ManufacturedBy, new { @class = "col-md-6 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(m => m.ManufacturedBy, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ManufacturedBy)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Number, new { @class = "col-md-6 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Number)
                        </div>
                    </div>
                    <div class="form-group" style="margin-top:15px">
                        <div class="col-xs-12">
                            <input type="submit" value="Create" class="btn btn100 btn-default" />
                        </div>
                    </div>
                }
            </section>
        </div>
        @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
    </div>

    @Scripts.Render("~/bundles/jqueryval")
</section>
