@model Motormechs.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<section id="login" class="col-md-6 form-Section">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h3>Create a new account.</h3>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
            <div class="col-xs-12" style="float:left">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
            <div class="col-xs-12" style="float:left">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Phone, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
            <div class="col-xs-12" style="float:left">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
            <div class="col-xs-12" style="float:left">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
            <div class="col-xs-12" style="float:left">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group" style="margin-top:15px">
            <div class="col-xs-12">
                <input type="submit" class="btn btn100 btn-default" value="Register" />
            </div>
        </div>
    }
    @Scripts.Render("~/bundles/jqueryval")
</section>