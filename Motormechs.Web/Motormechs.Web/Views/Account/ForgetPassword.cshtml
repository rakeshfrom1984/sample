@model Motormechs.Web.Models.ForgetPasswordViewModel
@{
    ViewBag.Title = "Forget Password";
}
@if (ViewBag.Status == 1)
{
    <section id="login" class="col-md-6 form-Section">
        <h2>@ViewBag.Title</h2>
        <div class="row">
            <div class="col-md-12">
                <section id="loginForm">
                    @using (Html.BeginForm("ForgetPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                        @Html.AntiForgeryToken()
                        @*<h4>Use a local account to log in.</h4>*@
                        <hr />
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
                            <div class="col-xs-12" style="float:left">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                        <div class="form-group" style="margin-top:15px">
                            <div class="col-xs-12">
                                <input type="submit" value="Send" class="btn btn100 btn-default" />
                            </div>
                        </div>
                }
                </section>
            </div>
        </div>
        @Scripts.Render("~/bundles/jqueryval")
    </section>
}
else
{
    <section id="login" class="col-md-6 form-Section" style="padding: 100px 0;">
        <div class="row">
            <div class="col-md-12">
                <section id="loginForm" style="text-align: center;">
                    <h3>
                        A link to reset you password has been sent to your email account..
                    </h3>
                    <h4>
                        Please check your email @ViewBag.Email.
                    </h4>
                </section>
            </div>
        </div>
    </section>
}
