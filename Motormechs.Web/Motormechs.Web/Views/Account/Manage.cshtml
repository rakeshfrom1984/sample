@using Motormechs.Web.Models;
@using Microsoft.AspNet.Identity;

@model Motormechs.Web.Models.ManageUserViewModel
@{
    ViewBag.Title = "Manage Account";
}
<section id="login" class="col-md-6 form-Section">


    @*<p class="text-success">@User.Identity.GetUserName().Split('|')[1]</p>*@
    <div class="row">
        <div class="col-md-12">
            <section id="loginForm">
                @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2>@ViewBag.Title</h2>
                    <hr />
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(Model => Model.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextAreaFor(Model => Model.Address, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Phone, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
                        <div class="col-xs-12" style="float:left">
                            @Html.TextBoxFor(Model => Model.Phone, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:15px">
                        <div class="col-xs-12">
                            <input type="submit" value="Update" class="btn btn100 btn-default" />
                        </div>
                    </div>
                }
            </section>
            @*<section id="externalLogins">
                    @* @Html.Action("RemoveAccountList")* @
                    @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
                </section>*@
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryval")

</section>