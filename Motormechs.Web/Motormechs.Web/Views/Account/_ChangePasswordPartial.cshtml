@using Microsoft.AspNet.Identity

@model Motormechs.Web.Models.ChangePasswordViewModel


@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h3>Change Password</h3>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
        <div class="col-xs-12" style="float:left">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
        <div class="col-xs-12" style="float:left">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label", @style = " text-align: left;" })
        <div class="col-xs-12" style="float:left">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group" style="margin-top:15px">
        <div class="col-xs-12">
            <input type="submit" value="Change password" class="btn btn100 btn-default" />
        </div>
    </div>
}
