@{
    ViewBag.Title = "ContactUs";
}

<section id="contactUs" class="contact-parlex">
    <div class="parlex-back">
        <div class="container">
            <div class="row">
                <div class="heading text-center" style="margin-bottom: 10px;">
                    <!-- Heading -->
                    <h2>Contact Us</h2>
                </div>
            </div>
            <div class="row mrgn30 col-md-4">
                <form method="post" action="" id="contactfrm" role="form">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" title="Please enter your name (at least 2 characters)">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" title="Please enter a valid email address">
                        </div>
                        <div class="form-group">
                            <label for="comments">Comments</label>
                            <textarea name="comment" class="form-control" id="comments" cols="3" rows="5" placeholder="Enter your message…" title="Please enter your message (at least 10 characters)"></textarea>
                            <button name="submit" type="submit" class="btn btn100 btn-default" id="submit">Submit</button>
                        </div>
                        <div class="result"></div>
                    </div>
                </form>
            </div>
            <div class="row mrgn30 col-md-8">
                <div class="col-sm-12">
                    <div class="form-group" style="text-align: center;">
                        <div class="padding-5-50">
                            <img src="~/Content/images/MotorAutoZone.png" />
                            <p class="font-22">Survey No: 56/A, Mundhwa-Kharadi Bypass, Mundhwa, Pune 411036</p>
                        </div>
                        <div class="padding-5-50" >
                            <img src="~/Content/images/CarSpa.png" />
                            <p class="font-22">Amanora town centre, West block, lower ground floor, Kharadi by-pass. Pune 411028</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row"></div>
            <div class="row">
                <div class="heading text-center">
                    <img src="~/Content/images/Map.png" />
                </div>
            </div>
        </div>
        <!--/.container-->
    </div>
</section>